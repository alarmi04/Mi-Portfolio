<header class="fixed top-0 left-0 z-50 w-full border-b border-white p-4 bg-[#13131A] opacity-80">
  <div class="flex justify-between items-center mx-auto px-4 md:px-12">
    <div class="flex items-center">
      <img class="w-12 h-12 rounded-full mr-4" src="/foto_perfil.jpg" alt="Logo" />
    </div>
    <!-- Botón solo visible en móvil -->
    <div class="md:hidden">
      <button id="menu-btn" class="text-white focus:outline-none">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    <!-- Menú visible según el tamaño de pantalla -->
    <nav id="menu" class="hidden md:flex flex-col md:flex-row gap-y-4 md:gap-x-10 items-center absolute md:static top-16 left-0 w-full md:w-auto bg-[#13131A] md:bg-transparent p-4 md:p-0">
      <a href="/#inicio" class="hover:text-[#6633ee] transition-colors">Inicio</a>
      <a href="/#formacion" class="hover:text-[#6633ee] transition-colors">Formación</a>
      <a href="/#proyectos" class="hover:text-[#6633ee] transition-colors">Proyectos</a>
      <a href="/#contacto" class="hover:text-[#6633ee] transition-colors">Contacto</a>
      <a href="./files/CV_Alberto_Aracil_Millan.pdf" download class="hover:text-[#000] transition-colors md:ml-10 bg-[#6633ee] px-4 py-2 rounded-full">
        <button>Descargar CV</button>
      </a>
    </nav>
  </div>
  <script is:inline>
    const btn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');
    btn?.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>